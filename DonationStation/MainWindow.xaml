<Window x:Class="Signpost.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="MainWindow" 
		WindowStyle="None"
		AllowsTransparency="True" 
		Left="0" Top="0"
		Loaded="MainWindow_Loaded" 
		KeyDown="MainWindow_KeyDown"
		Topmost="True"
		Background="Transparent"
		>
	<Window.Resources>
		<Storyboard x:Key="FlipStoryboard" x:Name="FlipStoryboard">
			
		</Storyboard>
	</Window.Resources>
	<Grid x:Name="MainGrid">
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<MediaElement Name="_meBackground" Grid.Row="0" IsMuted="True" Stretch="UniformToFill"
					   />		
		<Grid Grid.Row="0">
			<StackPanel
				x:Name="counterPanel"
				Orientation="Horizontal"
				HorizontalAlignment="Center"
				>
			</StackPanel>

		</Grid>
	</Grid>
</Window>
